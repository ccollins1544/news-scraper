<section class="section-block jumbotron" id="comment-section">
  <h2 class="text-center">
    <i class="far fa-comments"></i><strong> Comments</strong>
  </h2>
  <div class="card bg-light">
    <img src="..." class="card-img-top" id="comment_article_image" alt="...">
    <div class="card-body">
      <h5 class="card-title" id="comment_article_title"></h5>
      <p class="card-text">
        <small id="comment_article_pubdate"></small>
        <p id="comment_article_description"></p>
        <table class="table table-striped" id="all_comments_table">
          <thead class="thead-dark">
            <tr>
              <th colspan="2"><i class="fas fa-comments"></i> All Comments</th>
            </tr>
          </thead>
          <tbody></tbody>
          <tfoot>
            <tr>
              <td colspan="2" class="add-comment-form">
                <div class="card bg-dark">
                  <div class="card-header text-white">
                    <i class="fas fa-comment"></i><strong> Add Comment</strong>
                  </div>

                  <div class="card-body bg-light">
                    <form rol="form" id="add-comment-form" data-action="add" data-key="0">
                      <div class="form-group">
                        <label for="comment_title">Title</label>
                        <input type="text" class="form-control" id="comment_title" name="title">
                      </div>
                      <div class="form-group">
                        <label for="comment_body">Body</label>
                        <textarea class="form-control" id="comment_body" name="body"></textarea>
                      </div>
                      
                      <input type="hidden" id="comment_article_id" name="article_id">
                      <button type="submit" class="btn btn-primary float-sm-right save">Save <i class="fas fa-save fa-1x"></i></button>
                    </form>
                  </div><!-- .card-body -->
                </div><!-- .card -->
              </td>
            </tr>
          </tfoot>
        </table>
      </p>
    </div>
  </div>
</section>

<section class="section-block row" id="main-section">
  <div class="col-lg-12">

    <div class="card bg-dark">
      <div class="card-header text-white d-flex justify-content-between">
        <div><i class="far fa-list-alt"></i><strong> {{page_title}}</strong></div>
      </div>

      <div class="card-body bg-light">
        <table class="table table-striped" id="news-articles">
          <tbody>
            {{#isZero articles_saved}}
              <tr>
                <td><h6>No Articles Saved!</h6></td>
              </tr>
            {{/isZero}}
            
            {{#each articles}}
            {{> saved-articles}}
            {{/each}}
          </tbody>
        </table>
      </div><!-- .card-body -->
    </div><!-- .card -->

  </div>
</section>